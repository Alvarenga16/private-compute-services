import './AutofillSchemas.arcs'

@intendedPurpose('
  To make improvements to the platform Autofill service â€“ for example, provide suggestions for text input fields based on screen content, including smart copy & paste, smart replies and others.

  ALLOWED EGRESSES: FederatedCompute.
  ALLOWED USAGES: Federated analytics, federated learning.
  ALLOWED POPULATIONS: Production builds.
')
@egressType('FederatedCompute')
policy AutofillPolicy_FederatedCompute {

  config federatedCompute {
    minRoundSize: '1000',
    // This policy doesn't require SecAgg
    minSecAggRoundSize: '0',
  }

  config requiredUserConsent {
    value: 'UsageAndDiagnosticsCheckbox',
  }

  config approvalCondition {
    value: 'PreApproved',
  }

  config checkpointTtlDays {
    value: '720'
  }

  @allowedRetention(medium: 'Ram', encryption: false)
  @allowedRetention(medium: 'Disk', encryption: false)
  @maxAge('14days')
  from AutofillRequest access {
    @allowedUsage(label: 'raw', usageType: '*')
    configId,

    @allowedUsage(label: 'raw', usageType: '*')
    tcVersion,

    @allowedUsage(label: 'raw', usageType: 'join')
    @allowedUsage(label: 'truncatedToDays', usageType: '*')
    timestampMillis,

    @allowedUsage(label: 'raw', usageType: '*')
    suggestionShown,

    @allowedUsage(label: 'raw', usageType: '*')
    userAction,

    @allowedUsage(label: 'bucketed', usageType: '*')
    processingDuration,

    @allowedUsage(label: 'raw', usageType: 'join')
    @allowedUsage(label: 'top2000PackageNamesWith2000Wau', usageType: '*')
    targetPackageName,

    @allowedUsage(label: 'raw', usageType: 'join')
    @allowedUsage(label: 'top2000PackageNamesWith2000Wau', usageType: '*')
    targetActivityName,

    @allowedUsage(label: 'raw', usageType: 'join')
    @allowedUsage(label: 'top2000PackageNamesWith2000Wau', usageType: '*')
    targetResourceId,

    @allowedUsage(label: 'raw', usageType: '*')
    scoringFlags,

    @allowedUsage(label: 'raw', usageType: '*')
    deviceLocale,

    @allowedUsage(label: 'raw', usageType: '*')
    languageTags,

    candidates {
      @allowedUsage(label: 'raw', usageType: '*')
      entityType,

      @allowedUsage(label: 'raw', usageType: '*')
      candidateProviderType,

      @allowedUsage(label: 'raw', usageType: '*')
      scenarios,

      @allowedUsage(label: 'raw', usageType: '*')
      suppressionReasons,

      @allowedUsage(label: 'raw', usageType: '*')
      observationCount,

      @allowedUsage(label: 'raw', usageType: 'join')
      @allowedUsage(label: 'truncatedToDays', usageType: '*')
      lastObservationTimeMs,

      @allowedUsage(label: 'raw', usageType: 'join')
      @allowedUsage(label: 'top2000PackageNamesWith2000Wau', usageType: '*')
      sourcePackageName,

      @allowedUsage(label: 'raw', usageType: 'join')
      @allowedUsage(label: 'top2000PackageNamesWith2000Wau', usageType: '*')
      sourceActivityName,

      @allowedUsage(label: 'raw', usageType: 'join')
      @allowedUsage(label: 'top2000PackageNamesWith2000Wau', usageType: '*')
      sourceResourceId,

      @allowedUsage(label: 'raw', usageType: '*')
      localRank,

      @allowedUsage(label: 'raw', usageType: '*')
      globalRank,

      @allowedUsage(label: 'raw', usageType: '*')
      matchesCommittedText,

      @allowedUsage(label: 'raw', usageType: '*')
      suggested,

      @allowedUsage(label: 'raw', usageType: '*')
      selected,
    },
  }

  @allowedRetention(medium: 'Ram', encryption: false)
  @maxAge('14days')
  from AutofillRequest access {
    candidates {
      @allowedUsage(label: 'raw', usageType: '*')
      templateIndex,
    }
  }

  @allowedRetention(medium: 'Ram', encryption: false)
  @maxAge('2days')
  from AutofillRequest access {
    candidates {
      @allowedUsage(label: 'raw', usageType: '*')
      text,
    }
  }
}
